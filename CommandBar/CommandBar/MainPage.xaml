<Page
    x:Class="CommandBar.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CommandBar"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="grid"  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="-233,0,0,-119">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel VerticalAlignment="Stretch" Height="Auto">
            <MediaElement x:Name="media"/>
        </StackPanel>
    </Grid>
    <Page.BottomAppBar>
        <CommandBar x:Name="BottomCommand" Height="auto" RenderTransformOrigin="0.5,0.5" IsSticky="False">
            <AppBarToggleButton Label="Play" x:Name="PlayPause" Checked="Pause_Click" Unchecked="Play_Click" Icon="Pause"/>
            <AppBarToggleButton Label="ScreenSize" x:Name="LargeSmall" Checked="Full_Click" Unchecked="Small_Click" Icon="FullScreen"/>
            <AppBarSeparator/>
            <AppBarButton Icon="Back" Label="Back" Click="Back_Click"/>
            <AppBarButton Icon="Stop" Label="Stop" Click="Stop_Click"/>
            <AppBarButton Icon="Like" Label="Like" Click="Like_Click"/>
            <AppBarButton Icon="Dislike" Label="Dislike" Click="Dislike_Click"/>
            <CommandBar.Content>
                <!--<StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="20" >-->
                <ProgressBar Minimum="0" Maximum="100" Value="75" Height="auto"  Width="auto" Margin="20,60"/>
                <!--</StackPanel>-->
            </CommandBar.Content>
        </CommandBar>
    </Page.BottomAppBar>

</Page>
