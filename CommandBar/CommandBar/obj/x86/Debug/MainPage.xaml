<Page
    x:Class="CommandBar.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CommandBar"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys='clr-namespace:System;assembly=mscorlib'
    mc:Ignorable="d">
    <Grid x:ConnectionId='1' x:Name="grid"  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
       
        <StackPanel Grid.RowSpan="2" VerticalAlignment="Stretch" Height="Auto">
            <MediaElement x:ConnectionId='3' x:Name="media"/>
        </StackPanel>
        <StackPanel Grid.Row="1" VerticalAlignment="Bottom">
            <StackPanel.Background>
                <LinearGradientBrush Opacity="0.4">
                    <GradientStop Color="Black"/>
                </LinearGradientBrush>
            </StackPanel.Background>
            <Border Background="LightGreen" Width="100" Height="100" BorderBrush="Green">
                <Canvas>
                </Canvas>
            </Border>
            <Slider x:ConnectionId='2' Name="sliderSeek"                                                                                                                                                                 />
            
        </StackPanel>
    </Grid>
    <Page.BottomAppBar>
        <CommandBar x:ConnectionId='4' x:Name="BottomCommand" Height="auto" RenderTransformOrigin="0.5,0.5" IsSticky="False">
            <AppBarToggleButton x:ConnectionId='5' Label="Play" x:Name="PlayPause"                                              Icon="Pause"/>
            <AppBarToggleButton x:ConnectionId='6' Label="ScreenSize" x:Name="LargeSmall"                                              Icon="FullScreen"/>
            <AppBarSeparator/>
            <AppBarButton x:ConnectionId='7' Icon="Back" Label="Back"                   />
            <AppBarButton x:ConnectionId='8' Icon="Stop" Label="Stop"                   />
        </CommandBar>
    </Page.BottomAppBar>
</Page>

