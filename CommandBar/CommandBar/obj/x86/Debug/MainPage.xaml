<Page
    x:Class="CommandBar.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CommandBar"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:ConnectionId='1' x:Name="grid"  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="-233,0,0,-119">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel VerticalAlignment="Stretch" Height="Auto">
            <MediaElement x:ConnectionId='2' x:Name="media"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Height="30" Margin="10,719,179,10">
            <TextBlock Text="Seek" VerticalAlignment="Center"></TextBlock>
        </StackPanel>
    </Grid>
    <Page.BottomAppBar>
        <CommandBar x:ConnectionId='3' x:Name="BottomCommand" Height="auto" RenderTransformOrigin="0.5,0.5" IsSticky="False">
            <AppBarToggleButton x:ConnectionId='4' Label="Play" x:Name="PlayPause"                                              Icon="Pause"/>
            <AppBarToggleButton x:ConnectionId='5' Label="ScreenSize" x:Name="LargeSmall"                                              Icon="FullScreen"/>
            <AppBarSeparator/>
            <AppBarButton x:ConnectionId='6' Icon="Back" Label="Back"                   />
            <AppBarButton x:ConnectionId='7' Icon="Stop" Label="Stop"                   />
            <AppBarButton x:ConnectionId='8' Icon="Like" Label="Like"                   />
            <AppBarButton x:ConnectionId='9' Icon="Dislike" Label="Dislike"                      />
            <CommandBar.Content>
                <Slider x:ConnectionId='10' Margin="2" Width="100" TickFrequency="2" Name="sliderSeek" />
            </CommandBar.Content>
        </CommandBar>
    </Page.BottomAppBar>

</Page>

